<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @inventory.object %>
    <h1>Edit <%= @inventory.Sku%></h1>
    <%= link_to "Delete", :action => :delete, :id => @inventory.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Sku: </td>
              <td class="itemValue"><input type="text" name="inventory[Sku]" value="<%= @inventory.Sku %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Quantity: </td>
              <td class="itemValue"><input type="text" name="inventory[Quantity]" value="<%= @inventory.Quantity %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
