<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @inventory.Sku %></h1>
    <a href="<%= url_for :action => :show, :id => @inventory.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @inventory.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="inventory[Sku]" class="fieldLabel">Sku</label>
            <input type="text" id="inventory[Sku]" name="inventory[Sku]" value="<%= @inventory.Sku %>" <%= placeholder( "Sku" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="inventory[Quantity]" class="fieldLabel">Quantity</label>
            <input type="text" id="inventory[Quantity]" name="inventory[Quantity]" value="<%= @inventory.Quantity %>" <%= placeholder( "Quantity" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
