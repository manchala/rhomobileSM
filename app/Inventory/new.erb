<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @inventory.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @inventory.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="inventory[Sku]" class="fieldLabel">Sku</label>
            <input type="text" id="inventory[Sku]" name="inventory[Sku]" <%= placeholder("Sku") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="inventory[Quantity]" class="fieldLabel">Quantity</label>
            <input type="text" id="inventory[Quantity]" name="inventory[Quantity]" <%= placeholder("Quantity") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
